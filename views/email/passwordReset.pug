extends baseEmail

block content
  div.email-content
    h2.greeting Password Reset Request

    p.message
      | Hello #{firstName},
      | We received a request to reset the password for your Ryokou account. 
      | No worries! It happens to the best of us.

    p.message
      | To reset your password, simply click the button below. This link will expire in 
      span.highlight 10 minutes 
      | for security reasons.

    // Japanese Message
    div.japanese-greeting
      span.jp-text パスワードのリセット
      span.jp-translation Reset Your Password

    // Call to action
    
    div.cta-container
      a.cta-button(href=`${url}`) Reset Password


    // Security Notice
    div.features
      h3.features-title Important Security Information
      
      div.feature-item
        //- img.feature-icon(src="data:image/svg+xml;base64," alt="Security icon")
